<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.WorkProjectMapper">

    <resultMap type="WorkProject" id="WorkProjectResult">
        <result property="projectId"    column="project_id"    />
        <result property="name"    column="name"    />
        <result property="code"    column="code"    />
        <result property="customerId"    column="customer_id"    />
        <result property="projectManagerId"    column="project_manager_id"    />
        <result property="description"    column="description"    />
        <result property="contactPerson"    column="contact_person"    />
        <result property="isDefault"    column="is_default"    />
        <result property="isBillable"    column="is_billable"    />
        <result property="isActive"    column="is_active"    />
        <result property="createdAt"    column="created_at"    />
        <result property="updatedAt"    column="updated_at"    />
        <association property="user"    javaType="SysUser"     resultMap="userResult"/>

    </resultMap>

    <resultMap type="SysUser" id="userResult">
        <id     property="userId"        column="user_id"         />
        <result property="userName"      column="user_name"       />
        <result property="nickName"      column="nick_name"       />
        <result property="status"        column="status"          />
    </resultMap>



    <!--    p for WorkProject; c for WorkCustomer; u for User-->
    <sql id="selectWorkProjectVo">
        select p.project_id, p.name, p.code, p.customer_id, p.project_manager_id, p.description, p.contact_person, p.is_default, p.is_billable, p.is_active, p.created_at, p.updated_at,
        u.user_id, u.user_name, u.nick_name

        from work_project p
            left join sys_user u on p.project_manager_id = u.user_id
             where exists (select 1 from work_customer c where p.customer_id = c.customer_id and c.is_active_customer = 1)
    </sql>

    <select id="selectWorkProjectList" parameterType="WorkProject" resultMap="WorkProjectResult">
        <include refid="selectWorkProjectVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="customerId != null ">
                and p.customer_id = #{customerId}
            </if>
            <if test="projectManagerId != null ">
                and project_manager_id = #{projectManagerId}
            </if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="contactPerson != null  and contactPerson != ''"> and contact_person = #{contactPerson}</if>
            <if test="isDefault != null "> and is_default = #{isDefault}</if>
            <if test="isBillable != null "> and is_billable = #{isBillable}</if>
            <if test="isActive != null "> and is_active = #{isActive}</if>
            <if test="createdAt != null "> and created_at = #{createdAt}</if>
            <if test="updatedAt != null "> and updated_at = #{updatedAt}</if>
        </where>
    </select>
    
    <select id="selectWorkProjectByProjectId" parameterType="Long" resultMap="WorkProjectResult">
        <include refid="selectWorkProjectVo"/>
        and project_id = #{projectId}
    </select>

    <insert id="insertWorkProject" parameterType="WorkProject" useGeneratedKeys="true" keyProperty="projectId">
        insert into work_project
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="code != null and code != ''">code,</if>
            <if test="customerId != null">customer_id,</if>
            <if test="projectManagerId != null">project_manager_id,</if>
            <if test="description != null">description,</if>
            <if test="contactPerson != null">contact_person,</if>
            <if test="isDefault != null">is_default,</if>
            <if test="isBillable != null">is_billable,</if>
            <if test="isActive != null">is_active,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="code != null and code != ''">#{code},</if>
            <if test="customerId != null">#{customerId},</if>
            <if test="projectManagerId != null">#{projectManagerId},</if>
            <if test="description != null">#{description},</if>
            <if test="contactPerson != null">#{contactPerson},</if>
            <if test="isDefault != null">#{isDefault},</if>
            <if test="isBillable != null">#{isBillable},</if>
            <if test="isActive != null">#{isActive},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
         </trim>
    </insert>

    <update id="updateWorkProject" parameterType="WorkProject">
        update work_project
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="code != null and code != ''">code = #{code},</if>
            <if test="customerId != null">customer_id = #{customerId},</if>
            <if test="projectManagerId != null">project_manager_id = #{projectManagerId},</if>
            <if test="description != null">description = #{description},</if>
            <if test="contactPerson != null">contact_person = #{contactPerson},</if>
            <if test="isDefault != null">is_default = #{isDefault},</if>
            <if test="isBillable != null">is_billable = #{isBillable},</if>
            <if test="isActive != null">is_active = #{isActive},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
        </trim>
        where project_id = #{projectId}
    </update>

    <delete id="deleteWorkProjectByProjectId" parameterType="Long">
        delete from work_project where project_id = #{projectId}
    </delete>

    <delete id="deleteWorkProjectByProjectIds" parameterType="String">
        delete from work_project where project_id in 
        <foreach item="projectId" collection="array" open="(" separator="," close=")">
            #{projectId}
        </foreach>
    </delete>
</mapper>